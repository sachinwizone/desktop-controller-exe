<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!-- System Data Collection Configuration -->
    <appSettings>
        <!-- Web Dashboard API Configuration -->
        <add key="API_BASE_URL" value="http://localhost:8888"/>
        <add key="API_ENDPOINT_SYSTEM_INFO" value="/api/system-info/sync"/>
        <add key="API_ENDPOINT_APPS" value="/api/installed-apps/sync"/>
        
        <!-- Collection Intervals (in seconds) -->
        <add key="SYSTEM_INFO_INTERVAL" value="300"/>
        <add key="APPS_SYNC_INTERVAL" value="3600"/>
        <add key="COMMAND_CHECK_INTERVAL" value="30"/>
        
        <!-- Feature Toggles -->
        <add key="ENABLE_SYSTEM_INFO_COLLECTION" value="true"/>
        <add key="ENABLE_APPS_COLLECTION" value="true"/>
        <add key="ENABLE_REMOTE_CONTROL" value="true"/>
        
        <!-- Debug Settings -->
        <add key="DEBUG_MODE" value="true"/>
        <add key="LOG_API_CALLS" value="true"/>
    </appSettings>
</configuration>
